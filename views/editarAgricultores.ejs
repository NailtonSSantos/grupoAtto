<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('partials/head.ejs') %>
</head>
<body>

    <%- include('partials/header.ejs')  %> 

    <h1>Cadastro de Agricultores</h1>
    <br><br>

    <section class="box">
        <form action="/editarAgricultores" id="formCadastroAgric" method="post">
            <fieldset>
                <input type="hidden" name="id" value="<%= agricultores.id %>">
                <legend><b>Grupo Atto Sementes</b></legend>
                <br>
                
                <div class="inputBox">
                    <input type="text" name="razaosocial" id="razaosocial" class="inputText" value="<%= agricultores.razaosocial %>" required>
                    <label for="razaosocial" class="labelInput">Razão Social:</label>
                </div>
                <br><br>
                <div class="inputBox">
                    <input type="text" name="nomefantasia" id="nomefantasia" class="inputText" value="<%= agricultores.nome %>" required>
                    <label for="nomefantasia" class="labelInput">Nome Fantasia:</label>
                </div>
                <br><br>
                <label for="cpf"><b>CPF / CNPJ:</b></label>
                <input type="text" name="cpf" id="cpf" placeholder="CPF ou CNPJ" maxlength="14" value="<%= agricultores.cpf %>" required>
                <br><br>
                <div class="inputBox">
                    <input type="text" name="celular" id="celular" class="inputText" maxlength="15" value="<%= agricultores.celular %>" required>
                    <label for="celular" class="labelInput">Celular</label>
                </div>
                <br><br>
                <div class="inputBox">
                    <select name="estado" id="estado" value="<%= agricultores.estado %>" required>
                        <option value="">Selecione</option>
                        <option value="AC" <% if (agricultores.estado == 'AC') { %> selected <% } %> >Acre</option>
                        <option value="AL" <% if (agricultores.estado == 'AL') { %> selected <% } %> >Alagoas</option>
                        <option value="AP" <% if (agricultores.estado == 'AP') { %> selected <% } %> >Amapá</option>
                        <option value="AM" <% if (agricultores.estado == 'AM') { %> selected <% } %> >Amazonas</option>
                        <option value="BA" <% if (agricultores.estado == 'BA') { %> selected <% } %> >Bahia</option>
                        <option value="CE" <% if (agricultores.estado == 'CE') { %> selected <% } %> >Ceará</option>
                        <option value="DF" <% if (agricultores.estado == 'DF') { %> selected <% } %> >Distrito Federal</option>
                        <option value="ES" <% if (agricultores.estado == 'ES') { %> selected <% } %> >Espirito Santo</option>
                        <option value="GO" <% if (agricultores.estado == 'GO') { %> selected <% } %> >Goiás</option>
                        <option value="MA" <% if (agricultores.estado == 'MA') { %> selected <% } %> >Maranhão</option>
                        <option value="MS" <% if (agricultores.estado == 'MS') { %> selected <% } %> >Mato Grosso do Sul</option>
                        <option value="MT" <% if (agricultores.estado == 'MT') { %> selected <% } %> >Mato Grosso</option>
                        <option value="MG" <% if (agricultores.estado == 'MG') { %> selected <% } %> >Minas Gerais</option>
                        <option value="PA" <% if (agricultores.estado == 'PA') { %> selected <% } %> >Pará</option>
                        <option value="PB" <% if (agricultores.estado == 'PB') { %> selected <% } %> >Paraíba</option>
                        <option value="PR" <% if (agricultores.estado == 'PR') { %> selected <% } %> >Paraná</option>
                        <option value="PE" <% if (agricultores.estado == 'PE') { %> selected <% } %> >Pernambuco</option>
                        <option value="PI" <% if (agricultores.estado == 'PI') { %> selected <% } %> >Piauí</option>
                        <option value="RJ" <% if (agricultores.estado == 'RJ') { %> selected <% } %> >Rio de Janeiro</option>
                        <option value="RN" <% if (agricultores.estado == 'RN') { %> selected <% } %> >Rio Grande do Norte</option>
                        <option value="RS" <% if (agricultores.estado == 'RS') { %> selected <% } %> >Rio Grande do Sul</option>
                        <option value="RO" <% if (agricultores.estado == 'RO') { %> selected <% } %> >Rondônia</option>
                        <option value="RR" <% if (agricultores.estado == 'RR') { %> selected <% } %> >Roraima</option>
                        <option value="SC" <% if (agricultores.estado == 'SC') { %> selected <% } %> >Santa Catarina</option>
                        <option value="SP" <% if (agricultores.estado == 'SP') { %> selected <% } %> >São Paulo</option>
                        <option value="SE" <% if (agricultores.estado == 'SE') { %> selected <% } %> >Sergipe</option>
                        <option value="TO" <% if (agricultores.estado == 'TO') { %> selected <% } %> >Tocantins</option>
                    </select>
                </div>
                <br><br>
                <div class="inputBox">
                    <input type="text" name="cidade" id="cidade" class="inputText" value="<%= agricultores.cidade %>" required>
                    <label for="cidade" class="labelInput">Cidade:</label>
                </div>
                <br><br>
                <button type="button" name="btn" id="btn" onclick='javascript:validarCPF()'>Salvar Edição</button>
            </fieldset>
        </form>
    </section>

<br><br>

    <%- include('partials/footer.ejs') %>
    <%- include('partials/foot.ejs') %>
</body>
</html>